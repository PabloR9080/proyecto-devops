// schema.prisma
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            String    @id @default(uuid())
  name          String?
  email         String    @unique
  password      String
  createdAt     DateTime  @default(now()) @map(name: "created_at")
  lastLoginDate DateTime? @map(name: "last_login_date") @db.Timestamp(0)
  accounts      Account[]

  @@map(name: "users")
}

model Card {
  id         String   @id @default(uuid())
  type       String
  bankName   String
  number     String   @unique
  expiryDate DateTime
  createdAt  DateTime @default(now()) @map(name: "created_at")
  updatedAt  DateTime @updatedAt @map(name: "updated_at")
  Account    Account? @relation(fields: [accountId], references: [id])
  accountId  String?

  @@map(name: "cards")
}

model Account {
  id            String    @id @default(uuid())
  name          String
  balance       Decimal
  createDate    DateTime  @default(now()) @map(name: "create_date")
  lastLoginDate DateTime? @map(name: "last_login_date") @db.Timestamp(0)
  cards         Card[]
  User          User?     @relation(fields: [userId], references: [id])
  userId        String?

  @@map(name: "accounts")
}
